# Environment untuk cPanel Shared Hosting
# COPOT konfigurasi ini ke .env di hosting

APP_NAME="Sistem Absensi"
APP_ENV=production
APP_KEY=base64:U2U3PmJL8sJrM4MeHmTsLZkJTNl8ABYBrxS69D9qW9Q=
APP_DEBUG=false
APP_URL=https://absensi.loggenerator.my.id

# Database - Sesuaikan dengan konfigurasi cPanel MySQL
DB_CONNECTION=mysql
DB_HOST=localhost
DB_PORT=3306
DB_DATABASE=absensi
DB_USERNAME=absensi_user
DB_PASSWORD=undefined

# Cache dan Session - Optimized untuk shared hosting
CACHE_STORE=file
SESSION_DRIVER=file
SESSION_LIFETIME=120

# Queue - Sync untuk shared hosting (no background jobs)
QUEUE_CONNECTION=sync

# Logging
LOG_CHANNEL=single
LOG_LEVEL=error

# Mail - Sesuaikan dengan SMTP cPanel
MAIL_MAILER=smtp
MAIL_HOST=mail.yourdomain.com
MAIL_PORT=587
MAIL_USERNAME=your-email@yourdomain.com
MAIL_PASSWORD=your-email-password
MAIL_ENCRYPTION=tls
MAIL_FROM_ADDRESS=your-email@yourdomain.com
MAIL_FROM_NAME="${APP_NAME}"

# Filesystem - local untuk shared hosting
FILESYSTEM_DISK=local

# Broadcasting - log untuk shared hosting
BROADCAST_CONNECTION=log