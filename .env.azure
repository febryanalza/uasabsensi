# Azure VM Production Environment Configuration
# Ganti konfigurasi ini sesuai dengan setup Azure VM Anda

APP_NAME="Sistem Absensi"
APP_ENV=production
APP_KEY=base64:U2U3PmJL8sJrM4MeHmTsLZkJTNl8ABYBrxS69D9qW9Q=
APP_DEBUG=true
APP_TIMEZONE=UTC
APP_URL=http://your-azure-vm-ip

# Database Configuration - Azure VM MySQL
# Sesuaikan dengan database yang sudah dibuat di Azure VM
DB_CONNECTION=mysql
DB_HOST=localhost
DB_PORT=3306
DB_DATABASE=absensi_db
DB_USERNAME=azureuser
DB_PASSWORD=YourAzureDBPassword

# Cache dan Session - Production optimized
CACHE_STORE=file
SESSION_DRIVER=file
SESSION_LIFETIME=120

# Queue - Sync untuk Azure VM
QUEUE_CONNECTION=sync

# Logging - Temporary verbose untuk debugging
LOG_CHANNEL=stack
LOG_LEVEL=debug

# Mail Configuration - Azure SMTP atau local
MAIL_MAILER=smtp
MAIL_HOST=localhost
MAIL_PORT=587
MAIL_USERNAME=null
MAIL_PASSWORD=null
MAIL_ENCRYPTION=null
MAIL_FROM_ADDRESS="noreply@yourdomain.com"
MAIL_FROM_NAME="${APP_NAME}"

# Filesystem
FILESYSTEM_DISK=local

# Broadcasting
BROADCAST_CONNECTION=log

# Azure-specific settings
# Jika menggunakan Azure Database for MySQL, uncomment dan sesuaikan:
# DB_HOST=your-mysql-server.mysql.database.azure.com
# DB_USERNAME=your-admin@your-mysql-server
# DB_PASSWORD=your-password
# DB_DATABASE=absensi_db

# SSL Configuration for Azure Database (jika diperlukan)
# MYSQL_ATTR_SSL_CA=/path/to/ca-cert.pem